{
  "manifest_version": 2,
  "name": "Carbon",
  "description": "An awesome code editor for Chrome and ChromeOS. Perfect for coding and casual text editing.",
  "version": "1.1.5",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write"]},
    "unlimitedStorage",
    "contextMenus"
  ],
  "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ],
      "title": "Text editor"
    }
  },
    "icons": { "16": "icons/Carbon.png",
           "48": "icons/Carbon.png",
          "128": "icons/Carbon.png" }
}
